<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorLightMode</item>
        <item name="backgroundColor">@color/gntWhite</item>
        <item name="backgroundToolbarColor">@color/colorLightMode</item>
        <item name="textColor">@color/gntBlack</item>
        <item name="iconColor">@color/colorLightMode</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="strokeColor">#0A000000</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorDarkMode</item>
        <item name="backgroundColor">@color/colorDarkMode</item>
        <item name="backgroundToolbarColor">@color/colorDarkMode</item>
        <item name="textColor">@color/gntWhite</item>
        <item name="iconColor">@color/gntWhite</item>
        <item name="strokeColor">#80ffffff</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>
</resources>
